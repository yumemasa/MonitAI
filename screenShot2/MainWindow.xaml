<Window x:Class="screenShot2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:screenShot2"
        mc:Ignorable="d"
        Title="スクリーンショット自動撮影 + Gemini分析" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左側: スクリーンショット設定 -->
        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="スクリーンショット設定" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                
                <!-- 保存先フォルダ -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <TextBlock Text="保存先フォルダ：" Margin="0,0,0,5"/>
                    <DockPanel>
                        <Button x:Name="BrowseButton" Content="参照" Width="70" Margin="5,0,0,0" Click="BrowseButton_Click" DockPanel.Dock="Right"/>
                        <TextBox x:Name="FolderPathTextBox" IsReadOnly="True" DockPanel.Dock="Left"/>
                    </DockPanel>
                </StackPanel>

                <!-- モニター情報 -->
                <StackPanel Grid.Row="3" Margin="0,0,0,15">
                    <TextBlock x:Name="MonitorInfoTextBlock" Text="検出されたモニター: 0" FontWeight="Bold"/>
                </StackPanel>

                <!-- コントロールボタン -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button x:Name="StartButton" Content="撮影開始" Width="100" Height="35" Margin="0,0,10,0" Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="撮影停止" Width="100" Height="35" IsEnabled="False" Click="StopButton_Click"/>
                </StackPanel>

                <!-- ステータス -->
                <StackPanel Grid.Row="5" Margin="0,0,0,10">
                    <TextBlock x:Name="StatusTextBlock" Text="待機中" FontWeight="Bold" Foreground="Gray"/>
                </StackPanel>

                <!-- ログ -->
                <Border Grid.Row="6" BorderBrush="LightGray" BorderThickness="1" Padding="5">
                    <TextBox x:Name="LogTextBlock" TextWrapping="Wrap" FontSize="11" IsReadOnly="True" VerticalScrollBarVisibility="Auto" BorderThickness="0"/>
                </Border>
            </Grid>
        </Border>
        
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        
        <!-- 右側: Gemini設定と結果 -->
        <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="10,0,0,0">
            <DockPanel>
                <!-- 上部のコントロール -->
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Gemini AI 分析" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                    
                    <!-- API Key -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Gemini API Key：" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ApiKeyPasswordBox"/>
                    </StackPanel>

                    <!-- モデル選択 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="モデル：" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ModelComboBox" SelectedIndex="1">
                            <ComboBoxItem Content="gemini-2.5-pro"/>
                            <ComboBoxItem Content="gemini-2.5-flash"/>
                            <ComboBoxItem Content="gemini-2.5-flash-lite"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- ルール入力 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="目標・ルール（違反時のみ通知）：" Margin="0,0,0,5"/>
                        <TextBox x:Name="RulesTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Gemini送信チェックボックス -->
                    <StackPanel Margin="0,0,0,15">
                        <!-- ポイント表示 -->
                        <Border Background="#FFF3E0" BorderBrush="Orange" BorderThickness="1" Padding="5" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock x:Name="PointsTextBlock" Text="現在のポイント: 0pt" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="1-30pt: 通知" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="31-60pt: 入力遅延" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="61-100pt: グレースケール" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="101-150pt: マウス反転" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="151-200pt: ビープ音" FontSize="10" Foreground="Gray"/>
                                <TextBlock Text="201-250pt: 画面ロック" FontSize="10" Foreground="OrangeRed"/>
                                <TextBlock Text="251pt~: シャットダウン" FontSize="10" Foreground="Red" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <TextBlock Text="分析結果：" FontWeight="Bold" Margin="0,0,0,5"/>
                </StackPanel>

                <!-- 分析結果（残りのスペース全て使用） -->
                <Border BorderBrush="LightGray" BorderThickness="1" DockPanel.Dock="Top">
                    <TextBox x:Name="ResultTextBox" 
                             TextWrapping="Wrap" 
                             IsReadOnly="True" 
                             BorderThickness="0" 
                             Background="White"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"/>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>
